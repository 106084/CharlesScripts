#!/bin/bash

URL='ipgw.neu.edu.cn/srun_portal_pc.php?ac_id=1'

help(){
    echo 东北大学IP网关登陆器
    echo 用法：
    echo -e '\t' ipgw status 查询状态
    echo -e '\t' ipgw login username password 登陆网关
    echo -e '\t' ipgw logout username password 退出网关
}

status(){
    IFS=, INFO=($(curl -s $URL --data action=get_online_info|xargs|grep -oP '^.*?(?=<html)'))
    if [[ ${#INFO[@]} = 1 ]]; then
        echo 当前状态： 离线
    else
    echo 当前状态： 在线
    echo 当前流量： $((${INFO[0]}/1000000000)) GB
    echo 账户余额： ￥ ${INFO[2]}
    echo 当前 IP ： ${INFO[5]}
    fi
}

login(){
    INFO=$(curl -s $URL --data action=login --data username=$1 --data password=$2)
    SUCC=$(echo $INFO|xargs|grep -oP  '(?<=td height=40 style=font-weight:bold;color:orange;> ).*?(?=</td)')
    FAIL=$(echo $INFO|xargs|grep -oP  '(?<=<p>).*?(?=</p)'|head -1)
    if [[ -z $SUCC ]]; then
        echo $FAIL
    else
        echo $SUCC
        status
    fi
}

logout(){
    INFO=$(curl -s $URL --data action=logout --data username=$1 --data password=$2)
    SUCC=$(echo $INFO|xargs|grep -oP  '(?<=td height=40 style=font-weight:bold;color:orange;> ).*?(?=</td)')
    FAIL=$(echo $INFO|xargs|grep -oP  '(?<=<p>).*?(?=</p)'|head -1)
    if [[ -z $SUCC ]]; then
        echo $FAIL
    else
        echo $SUCC
        status
    fi
}

case $1 in
    status ) status ;;
    login ) login $2 $3 ;;
    logout ) logout $2 $3 ;;
    * ) help ;;
esac
