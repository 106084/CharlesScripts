#!/bin/sh
# set an reminder and it'll remind you of doing something.
# note time something
# i.e.: type "note 4m 'go to see a movie with my gf'", and it'll notify you to "go to see a movie with my gf" after 4 minuts.

sleep $1
for i in `seq 5`;do
    espeak -v zh $2
    notify-send $2
done

notify-send --urgency=critical $2
